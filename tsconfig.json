{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],  // أضفنا "dom" عشان يتعرف على document و HTML elements
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ]
  },
  "include": ["./*.ts"]
}
